{
  "entities": {
     "SharedAccess": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Shared Access Credentials",
      "description": "Stores the shared username and password for the application.",
      "type": "object",
      "properties": {
        "user": {
          "type": "string",
          "description": "The shared username."
        },
        "password": {
          "type": "string",
          "description": "The shared password."
        }
      },
      "required": ["user", "password"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "structure": [
      {
        "path": "/shared-access/credentials",
        "definition": {
          "entityName": "SharedAccess",
          "schema": {
            "$ref": "#/backend/entities/SharedAccess"
          },
          "description": "A single document that holds the current shared login credentials. This document should only be writable by an administrator.",
          "isCollection": false
        }
      }
    ]
  }
}
