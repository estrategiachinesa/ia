rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow anyone to read the shared credentials document.
    // This is safe because we are only verifying credentials, not exposing sensitive data.
    // IMPORTANT: Only you (the admin) should have write access to this document.
    // You must set this up manually in the Firestore console security rules for this specific document.
    match /shared-access/credentials {
      allow read: if true;
    }
  }
}
